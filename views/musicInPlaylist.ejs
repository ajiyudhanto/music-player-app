<!DOCTYPE html>
<html>
    <title>Add Playlist - MusicApp</title>
    <head>
        <link rel="stylesheet" href="/css/stylePlaylist.css">
    </head>
    <body>
        <h1>LIST MUSIC YANG TERDAPAT PADA PLAYLIST INI:</h1>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Judul</th>
                        <th>Penyanyi</th>
                        <th>Pencipta</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tBody>
                    <% for(let i = 0; i < data.Music.length; i++) { %>
                        <tr>
                            <td><%= data.Music[i].judul %></td>
                            <td><%= data.Music[i].penyanyi %></td>
                            <td><%= data.Music[i].pencipta %></td>
                            <td><a href="/playlists/delete/<%= data.id %>/<%= data.Music[i].id %>">Remove</a></td>
                        </tr>
                    <% } %>
                </tBody>
            </table>
            <br>
            <!-- <a style="margin-left: 48%;" href="/playlists/create"><img  style="width: 40px; height: 40px; opacity: 80%;" src="/img/buttonAdd.png"></a> -->
            
        </div>
        <div>
            <H1>TAMBAH LAGU KE DALAM PLAYLIST:</H1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Judul</th>
                        <th>Penyanyi</th>
                        <th>Pencipta</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tBody>
                    <% for(let i = 0; i < list.length; i++) { %>
                        <tr>
                            <td><%= list[i].judul %></td>
                            <td><%= list[i].penyanyi %></td>
                            <td><%= list[i].pencipta %></td>
                            <td><a href="/playlists/add/<%= data.id %>/<%= list[i].id %>">Add</a></td>
                        </tr>
                    <% } %>
                </tBody>
            </table>
        </div>
    </body>
</html>    

